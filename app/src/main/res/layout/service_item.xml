<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/main_service_item"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp15"
    android:layout_marginLeft="@dimen/dp15"
    android:layout_marginRight="@dimen/dp15"
    android:layout_marginEnd="@dimen/dp15"
    android:layout_marginBottom="@dimen/dp20"
    android:background="@color/main_bg_service"
    >

    <ImageView
        android:id="@+id/image_view_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_service_icon"
        android:src="@drawable/ic_airplane"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        />

    <TextView
        android:id="@+id/text_view_service_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_view_service"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center"
        android:textSize="@dimen/sp15"
        android:textColor="@color/main_header_sub_title"
        />

</android.support.constraint.ConstraintLayout>